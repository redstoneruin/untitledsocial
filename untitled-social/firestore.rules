rules_version = '1';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /posts/{post} {
    	allow read, write: if request.auth.uid != null;
    }
  	match /users/{user} {
    	match /posts/{post} {
      	allow read: if request.auth.uid != null;
      	allow write: if request.auth.uid == user;
      }
    	allow read: if request.auth.uid != null;
      allow write: if request.auth.uid == user;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}